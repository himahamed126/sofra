<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fragment_client_order_container_tl_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_light_1"
        app:tabIndicatorColor="@color/pink"
        app:tabTextAppearance="@style/tab_text_blue" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fragment_client_order_container_vp_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_client_order_container_tl_tablayout" />
</RelativeLayout>