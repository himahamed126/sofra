<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    app:cardCornerRadius="50dp"
    app:cardElevation="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_category_filter_ly_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_category_filter_iv_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_category_filter_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_category_filter_ly_avatar"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/janna"
        android:gravity="center"
        android:maxLines="1"
        android:text="test"
        android:textColor="@color/black"
        android:textSize="12sp" />
</RelativeLayout>
