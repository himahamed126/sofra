<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="4dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment_edit_restaurant_profile_iv_avatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_add_person" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/cv_ed_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp">

            <EditText
                android:id="@+id/fragment_edit_restaurant_profile_ed_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/ic_person_black"
                android:drawablePadding="4dp"
                android:padding="10dp"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/cv_ed_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp">

            <EditText
                android:id="@+id/fragment_edit_restaurant_profile_ed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/ic_mail_black"
                android:drawablePadding="4dp"
                android:padding="10dp"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/cv_ed_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl">

                <ImageView
                    android:id="@+id/fragment_edit_restaurant_profile_iv_sp_city"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_home_black" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/fragment_edit_restaurant_profile_sp_city"
                    style="@style/Spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@id/fragment_edit_restaurant_profile_iv_sp_city" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/cv_ed_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl">

                <ImageView
                    android:id="@+id/fragment_edit_restaurant_profile_iv_sp_region"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_home_black" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/fragment_edit_restaurant_profile_sp_region"
                    style="@style/Spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@id/fragment_edit_restaurant_profile_iv_sp_region" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            style="@style/cv_ed_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp">

            <EditText
                android:id="@+id/fragment_edit_restaurant_profile_ed_minim_charge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/ic_money_black"
                android:drawablePadding="4dp"
                android:padding="10dp"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/cv_ed_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp">

            <EditText
                android:id="@+id/fragment_edit_restaurant_profile_ed_dlivery_coast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/ic_money_black"
                android:drawablePadding="4dp"
                android:padding="10dp"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/cv_ed_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp">

            <EditText
                android:id="@+id/fragment_edit_restaurant_profile_ed_dlivery_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/ic_time_black"
                android:drawablePadding="4dp"
                android:padding="10dp"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/janna"
                android:text="@string/status"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/fragment_edit_restaurant_profile_sw_status"
                style="@style/SCBSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/janna"
            android:layoutDirection="rtl"
            android:text="@string/conect_info"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            style="@style/cv_ed_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/fragment_edit_restaurant_profile_ed_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/ic_phone_black"
                android:drawablePadding="4dp"
                android:padding="10dp"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/cv_ed_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp">

            <EditText
                android:id="@+id/fragment_edit_restaurant_profile_ed_whats_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/ic_whatsapp"
                android:drawablePadding="4dp"
                android:padding="10dp"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/fragment_edit_restaurant_profile_btn_edit"
            style="@style/btn_pink"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="@string/edit" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>